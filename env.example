# Пример файла .env для EduFlow
# Скопируйте этот файл в .env и заполните своими значениями

# Секретный ключ для сессий (сгенерируйте уникальный)
SECRET_KEY=your-secret-key-here

# Конфигурация почты
MAIL_SERVER=smtp.yandex.ru
MAIL_PORT=465
MAIL_USE_TLS=False
MAIL_USE_SSL=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Конфигурация платежей YooKassa
YOOKASSA_SHOP_ID=your-shop-id
YOOKASHA_SECRET_KEY=your-secret-key
YOOKASSA_TEST_MODE=True

# База данных
DATABASE_URL=sqlite:///app.db

# Настройки безопасности
DEBUG=True
FLASK_ENV=development

# Конфигурация загрузки файлов
UPLOAD_FOLDER=app/static/uploads
CHAT_FILES_FOLDER=app/static/chat_files
TICKET_FILES_FOLDER=app/static/ticket_files
MAX_CONTENT_LENGTH=20971520

# Настройки логирования
LOG_FILE=err.log
LOG_LEVEL=INFO

# Цены подписки
SUBSCRIPTION_PRICE_1=89.00
SUBSCRIPTION_PRICE_3=199.00
SUBSCRIPTION_PRICE_6=349.00
SUBSCRIPTION_PRICE_12=469.00
SUBSCRIPTION_CURRENCY=RUB
